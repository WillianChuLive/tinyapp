<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <% if(false){ %>
      <form method="POST" action="/logout">
        <div class="input-group">
          <label for="userName">Welcome <%= loggedUserName %></label>
          <input type="hidden" class="form-control" name="userName" value="UserName">
          <span class="input-group-btn">
            <button style="width: 100px;" type="submit" class="btn btn-warning">Logout</button>
          </span>
        </div>
      </form>
      <% } else{ %>  
        <form method="POST" action="/login">
          <div class="input-group">
            <input type="text" class="form-control" name="userName" value="UserName">
            <span class="input-group-btn">
              <button style="width: 100px;" type="submit" class="btn btn-warning">Login</button>
            </span>
          </div>
        </form>
     <% } %>
    </div>
  </nav>
  
</header>
